{
  "name": "@flexbase/store",
  "version": "3.0.2",
  "description": "State management framework",
  "author": {
    "name": "Flexbase Technologies",
    "email": "hello@flexbase.app",
    "url": "https://flexbase.app"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flexbase-eng/store/issues"
  },
  "homepage": "https://github.com/flexbase-eng/store#readme",
  "keywords": [
    "flexbase",
    "state management",
    "flux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flexbase-eng/store.git"
  },
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "engines": {
    "node": ">=17.0.0"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.json --max-warnings=0",
    "lint:fix": "yarn lint --fix",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,json}'",
    "test": "vitest run --coverage",
    "test:ci": "vitest run --coverage --config vitest.ci.config.ts",
    "prepare": "is-ci || husky install",
    "packr": "packr"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": "eslint --cache --fix --max-warnings=0",
    "src/**/*.{ts,tsx,css,json}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@flexbase/logger": "^3.0.0",
    "@flexbase/observable-subject": "^2.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@flexbase/packr": "latest",
    "@rollup/plugin-typescript": "^11.1.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@vitest/coverage-v8": "^1.0.1",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-check-file": "2.6.2",
    "eslint-plugin-filenames-simple": "0.9.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "husky": "latest",
    "is-ci": "^3.0.1",
    "lint-staged": "15.2.0",
    "moq.ts": "^10.0.8",
    "prettier": "3.1.0",
    "semantic-release": "^22.0.10",
    "typescript": "^5.3.2",
    "vite": "5.0.6",
    "vite-plugin-dts": "^3.6.4",
    "vitest": "1.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "eslint-config-prettier"
    ],
    "overrides": [],
    "plugins": [
      "filenames-simple",
      "check-file",
      "require-extensions",
      "import"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [
            "./src/**/*"
          ],
          "extensions": [
            ".js",
            ".ts",
            ".d.ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "check-file/folder-naming-convention": [
        "error",
        {
          "src/**/": "KEBAB_CASE",
          "tests/**/": "KEBAB_CASE",
          "cypress/**/": "KEBAB_CASE"
        }
      ],
      "filenames-simple/naming-convention": [
        "error",
        {
          "rule": "kebab-case"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".github",
    ".vscode",
    "build",
    "scripts",
    "tests"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 150
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "*",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "message": "major*",
              "release": "major"
            },
            {
              "message": "feat*",
              "release": "minor"
            },
            {
              "message": "*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "packr": {
    "output": "output",
    "properties": [
      "name",
      "version",
      "description",
      "main",
      "module",
      "types",
      "exports",
      "homepage",
      "repository",
      "bugs",
      "author",
      "license",
      "dependencies",
      "type",
      "bin",
      "keywords"
    ],
    "include": [
      "dist",
      "README.md",
      "LICENSE",
      "yarn.lock"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
